<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xianzhiyun.mapper.CommunityMapper">

    <!-- 确保这个 resultMap 只定义一次 -->
    <resultMap id="CommunityResultMap" type="com.example.xianzhiyun.entity.Community">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="category_key" property="categoryKey" />
        <result column="description" property="description" />
        <result column="cover_url" property="coverUrl" />
        <result column="creator_id" property="creatorId" />
        <result column="member_count" property="memberCount" />
        <result column="topic_count" property="topicCount" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 查询我加入的社区 -->
    <select id="selectMyJoined" resultMap="CommunityResultMap">
        SELECT c.*
        FROM community c
                 INNER JOIN community_member cm ON c.id = cm.community_id
        WHERE cm.user_id = #{userId}
        ORDER BY cm.join_time DESC
    </select>

    <!-- 列表查询：核心修正点 -->
    <select id="selectByCategory" resultMap="CommunityResultMap">
        SELECT * FROM community
        <where>
            <if test="categoryKey != null">
                AND category_key = #{categoryKey}
            </if>
            AND status = 'ACTIVE'
        </where>
        ORDER BY member_count DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计查询：核心修正点 -->
    <select id="countByCategory" resultType="int">
        SELECT COUNT(*) FROM community
        <where>
            <if test="categoryKey != null">
                AND category_key = #{categoryKey}
            </if>
            AND status = 'ACTIVE'
        </where>
    </select>

    <select id="selectById" resultMap="CommunityResultMap">
        SELECT * FROM community WHERE id = #{id}
    </select>

    <update id="incrementMemberCount">
        UPDATE community SET member_count = member_count + 1 WHERE id = #{id}
    </update>

    <update id="decrementMemberCount">
        UPDATE community SET member_count = member_count - 1 WHERE id = #{id} AND member_count > 0
    </update>

    <update id="incrementTopicCount">
        UPDATE community SET topic_count = topic_count + 1 WHERE id = #{id}
    </update>

    <select id="selectByCommunityCategoryKey" resultMap="CommunityResultMap">
        SELECT * FROM community
        WHERE category_key = #{categoryKey} AND status = 'ACTIVE'
        ORDER BY member_count DESC
    </select>

</mapper>