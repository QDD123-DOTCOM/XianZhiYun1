<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xianzhiyun.mapper.CartItemMapper">
    <resultMap id="BaseResultMap" type="com.example.xianzhiyun.entity.CartItem">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="goods_id" property="goodsId"/>
        <result column="quantity" property="quantity"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT * FROM cart_item WHERE id = #{id}
    </select>

    <select id="selectByUserAndGoods" resultMap="BaseResultMap">
        SELECT * FROM cart_item WHERE user_id = #{userId} AND goods_id = #{goodsId} LIMIT 1
    </select>

    <select id="selectByUserId" parameterType="long" resultMap="BaseResultMap">
        SELECT * FROM cart_item WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.example.xianzhiyun.entity.CartItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart_item (user_id, goods_id, quantity) VALUES (#{userId}, #{goodsId}, #{quantity})
    </insert>

    <update id="updateQuantity" parameterType="map">
        UPDATE cart_item SET quantity = #{quantity}, updated_at = CURRENT_TIMESTAMP WHERE id = #{id}
    </update>

    <update id="updateQuantityByUserAndGoods" parameterType="map">
        UPDATE cart_item SET quantity = #{quantity}, updated_at = CURRENT_TIMESTAMP
        WHERE user_id = #{userId} AND goods_id = #{goodsId}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM cart_item WHERE id = #{id}
    </delete>

    <delete id="deleteByUserAndGoods" parameterType="map">
        DELETE FROM cart_item WHERE user_id = #{userId} AND goods_id = #{goodsId}
    </delete>
    <!-- 批量按 goodsId 删除当前用户的购物车项 -->
    <delete id="deleteByUserAndGoodsIds" parameterType="map">
        DELETE FROM cart_item
        WHERE user_id = #{userId}
        AND goods_id IN
        <foreach item="gid" collection="goodsIds" open="(" separator="," close=")">
            #{gid}
        </foreach>
    </delete>
</mapper>